*, ::before, ::after
  box-sizing inherit

html
  box-sizing border-box

body
  // NOTE reset base font size to browser default to normalize between browsers
  font-size 16px

aside[role=note]
  display none

.deck
  overflow hidden
  color rgb(48, 48, 48)
  text-rendering optimizeLegibility
  font-feature-settings "kern" 1
  font-kerning normal
  //-webkit-font-smoothing antialiased
  //-moz-osx-font-smoothing grayscale

  // NOTE hide deck and slide content until Bespoke classes have been added
  &:not(.bespoke-parent), section:not(.bespoke-slide)
    display none

.bespoke-parent, .bespoke-scale-parent
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.bespoke-scale-parent, .bespoke-slide
  pointer-events none

.bespoke-slide
  overflow hidden
  // force opacity to start at 0 to avoid transition on load when using bespoke-scale
  opacity 0
  position absolute
  top 50%
  left 50%
  width 640px
  margin-left -(@width / 2)
  height 360px
  margin-top -(@height / 2)
  display flex
  flex-direction column
  justify-content center
  align-items center
  background-position center center

.bespoke-active
  pointer-events auto
  opacity 1
  z-index 1

.bespoke-inactive
  transition-delay 0

.bespoke-bullet
  //transition opacity 0.2s ease
  //opacity 1
  //// NOTE workaround bug in Chrome resulting in a visual shift
  //-webkit-transform rotate(0)
  &-inactive
    //opacity 0
    //pointer-events none
    visibility hidden
